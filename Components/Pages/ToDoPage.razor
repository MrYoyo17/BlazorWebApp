@page "/todo"
@using TestBlazor.Models
@using TestBlazor.Services
@inject ToDoService ToDoService
@rendermode InteractiveServer

<h3>ToDo Lists</h3>

<div class="row">
    <div class="col-md-4">
        <h4>Templates</h4>
        <div class="mb-3">
             <input class="form-control mb-2" placeholder="New Template Name" @bind="newTemplateName" />
             <button class="btn btn-success" @onclick="CreateTemplate">Create New Template</button>
        </div>

        @foreach (var template in Templates)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        @if (editingTemplateId == template.Id)
                        {
                            <input class="form-control" @bind="template.Name" />
                        }
                        else
                        {
                            @template.Name
                        }
                    </h5>
                    <p class="card-text">@template.Description</p>
                    
                    @if (editingTemplateId == template.Id)
                    {
                        <ul>
                            @foreach (var item in template.Items)
                            {
                                <li class="mb-1">
                                    <div class="input-group input-group-sm">
                                        <input class="form-control" @bind="item.Description" />
                                        <button class="btn btn-outline-danger" @onclick="() => RemoveItem(template, item)">X</button>
                                    </div>
                                </li>
                            }
                        </ul>
                        <div class="input-group input-group-sm mb-2">
                             <input class="form-control" placeholder="New Item" @bind="newItemDescription" />
                             <button class="btn btn-outline-secondary" @onclick="() => AddItem(template)">Add Item</button>
                        </div>
                        <button class="btn btn-primary btn-sm" @onclick="SaveTemplates">Save Changes</button>
                    }
                    else
                    {
                        <ul>
                            @foreach (var item in template.Items)
                            {
                                <li>@item.Description</li>
                            }
                        </ul>
                        <button class="btn btn-secondary btn-sm" @onclick="() => EditTemplate(template)">Edit</button>
                        <button class="btn btn-primary btn-sm" @onclick="() => StartList(template)">Start List</button>
                    }
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <h4>Active Lists</h4>
        @if (ActiveLists.Count == 0)
        {
            <p>No active lists. Start one from a template!</p>
        }
        else
        {
            @foreach (var list in ActiveLists)
            {
                <div class="card mb-3 border-primary">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>@list.Name (@GetProgress(list))</span>
                        <button class="btn btn-close" @onclick="() => CloseList(list)"></button>
                    </div>
                    <div class="card-body">
                        @foreach (var item in list.Items)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" @bind="item.IsChecked" id="@item.Id" />
                                <label class="form-check-label @(item.IsChecked ? "text-decoration-line-through text-muted" : "")" for="@item.Id">
                                    @item.Description
                                </label>
                            </div>
                        }
                        <div class="mt-3">
                            <button class="btn btn-success btn-sm w-100" @onclick="() => ArchiveList(list)">Archive</button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="col-md-4">
        <h4>History</h4>
        <button class="btn btn-outline-secondary mb-3 btn-sm" @onclick="LoadHistory">Refresh History</button>
        @if (ArchivedLists == null)
        {
            <p>Loading...</p>
        }
        else if (ArchivedLists.Count == 0)
        {
            <p>No archived lists yet.</p>
        }
        else
        {
            @foreach (var list in ArchivedLists)
            {
                <div class="card mb-3 bg-light">
                    <div class="card-header">
                        <strong>@list.OriginalTemplateName</strong><br/>
                        <small class="text-muted">@list.DateArchived.ToShortDateString() @list.DateArchived.ToShortTimeString()</small>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            @foreach (var item in list.Items)
                            {
                                <li>
                                    <span class="@(item.IsChecked ? "text-success" : "text-danger")">
                                        @(item.IsChecked ? "☑" : "☐")
                                    </span>
                                    @item.Description
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private List<ToDoTemplate> Templates = new();
    private List<ToDoTemplate> ActiveLists = new();
    private List<ArchivedToDoList>? ArchivedLists;
    private Guid? editingTemplateId;
    private string newTemplateName = "";
    private string newItemDescription = "";

    protected override async Task OnInitializedAsync()
    {
        // Chargement initial des données.
        // Utilisation de méthodes asynchrones (async/await) pour ne pas bloquer le thread UI pendant l'accès BDD/fichier.
        Templates = ToDoService.LoadTemplates();
        await LoadHistory();
    }

    private async Task LoadHistory()
    {
        // Récupère l'historique depuis la base de données SQLite via le service.
        ArchivedLists = await ToDoService.GetArchivedListsAsync();
    }

    private void CreateTemplate()
    {
        if (!string.IsNullOrWhiteSpace(newTemplateName))
        {
            var newTemplate = new ToDoTemplate { Name = newTemplateName };
            Templates.Add(newTemplate);
            ToDoService.SaveTemplates(Templates);
            newTemplateName = "";
        }
    }

    private void EditTemplate(ToDoTemplate template)
    {
        editingTemplateId = template.Id;
        newItemDescription = "";
    }

    private void SaveTemplates()
    {
        ToDoService.SaveTemplates(Templates);
        editingTemplateId = null;
    }

    private void AddItem(ToDoTemplate template)
    {
        if (!string.IsNullOrWhiteSpace(newItemDescription))
        {
            template.Items.Add(new ToDoItem { Description = newItemDescription });
            newItemDescription = "";
        }
    }

    private void RemoveItem(ToDoTemplate template, ToDoItem item)
    {
        template.Items.Remove(item);
    }

    private void StartList(ToDoTemplate template)
    {
        // Création d'une copie profonde (Deep Copy) du modèle pour créer une liste active.
        // Cela permet de cocher les cases sans modifier le modèle original.
        var activeList = new ToDoTemplate
        {
            Id = Guid.NewGuid(),
            Name = $"{template.Name} ({DateTime.Now:HH:mm})",
            Description = template.Description,
            Items = template.Items.Select(i => new ToDoItem { Description = i.Description }).ToList()
        };
        ActiveLists.Add(activeList);
    }

    private void CloseList(ToDoTemplate list)
    {
        ActiveLists.Remove(list);
    }

    private async Task ArchiveList(ToDoTemplate list)
    {
        // Archivage asynchrone dans la BDD SQLite.
        await ToDoService.ArchiveListAsync(list);
        ActiveLists.Remove(list);
        // Rafraîchissement de la vue historique pour montrer immédiatement le nouvel élément.
        await LoadHistory();
    }

    private string GetProgress(ToDoTemplate list)
    {
        var total = list.Items.Count;
        if (total == 0) return "Done";
        var checkedCount = list.Items.Count(i => i.IsChecked);
        return $"{checkedCount}/{total}";
    }
}
