<div class="cross-filter-container" style="position: relative; width: 100%; height: 100%;">
    @ChildContent
    @if (HasCrossFilter)
    {
        <div class="cross-overlay"></div>
    }
</div>

<style>
    .cross-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none; /* Allow clicks to pass through */
        background: 
            linear-gradient(to top left,
                rgba(0,0,0,0) 0%,
                rgba(0,0,0,0) calc(50% - 0.8px),
                rgba(255,0,0,1) 50%,
                rgba(0,0,0,0) calc(50% + 0.8px),
                rgba(0,0,0,0) 100%),
            linear-gradient(to top right,
                rgba(0,0,0,0) 0%,
                rgba(0,0,0,0) calc(50% - 0.8px),
                rgba(255,0,0,1) 50%,
                rgba(0,0,0,0) calc(50% + 0.8px),
                rgba(0,0,0,0) 100%);
        opacity: 0.8;
    }
</style>

@code {
    [Parameter] public bool HasCrossFilter { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
