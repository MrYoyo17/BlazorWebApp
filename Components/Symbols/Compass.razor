        <text x="15" y="53" font-family="Arial" font-size="10" text-anchor="middle">W</text>

        <!-- Rotating Arrow -->
        <g transform="rotate(@CurrentHeading, 50, 50)">
            <path d="M50 20 L60 80 L50 70 L40 80 Z" fill="red" stroke="black" stroke-width="1" />
