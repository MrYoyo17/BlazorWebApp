@using TestBlazor.Components.Symbols.Common

<SymbolWrapper IsSelected="@IsSelected" IsEnabled="@IsEnabled" HasCommLoss="@HasCommLoss" Size="@Size" Rotation="@Rotation" OverlayContent="@OverlayContent" OnClick="@OnClick" OnSettingsClick="@OnSettingsClick">
    <div class="pump-symbol">
        <PumpIcon />
    </div>
</SymbolWrapper>

<style>
    .pump-symbol {
        width: 100%;
        height: 100%;
    }
</style>

@code {
    [Parameter] public bool IsSelected { get; set; }
    [Parameter] public bool IsEnabled { get; set; } = true;
    [Parameter] public bool HasCommLoss { get; set; }
    [Parameter] public int Size { get; set; } = 100;
    [Parameter] public int Rotation { get; set; } = 0;
    [Parameter] public RenderFragment? OverlayContent { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter] public EventCallback OnSettingsClick { get; set; }
}
